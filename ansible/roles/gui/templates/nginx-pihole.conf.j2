server {
    listen 80;
    server_name {{ gui_domain | default('_') }};

    location /.well-known/acme-challenge/ {
        root /var/www/certbot;
    }

    location / {
        proxy_pass http://127.0.0.1:{{ gui_port | default(8080) }};
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}

{% if letsencrypt_enabled or ssl_self_signed %}
server {
    listen 443 ssl;
    server_name {{ gui_domain | default('_') }};

    ssl_certificate {{ ssl_cert_path | default('/etc/ssl/private/pihole-netshield.crt') }};
    ssl_certificate_key {{ ssl_key_path | default('/etc/ssl/private/pihole-netshield.key') }};

    location / {
        proxy_pass http://127.0.0.1:{{ gui_port | default(8080) }};
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}
{% endif %}
